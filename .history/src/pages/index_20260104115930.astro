---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const LINKS = {
	github: 'https://github.com/greivin-arce',
	linkedin: 'https://www.linkedin.com/in/TU-USUARIO/', // <-- cambia esto
	email: 'mailto:greivin.arce.n@gmail.com',
};

const PROJECTS = [
	{
		title: 'Transaction Processing API',
		desc: 'Secure REST API with pagination, sorting, and integration tests. Built with clean architecture and reliability in mind.',
		stack: ['Java', 'Spring Boot', 'PostgreSQL', 'JUnit'],
		github: 'https://github.com/greivin-arce/transaction-processing-api', // <-- si el repo tiene otro nombre, cámbialo
		live: '',
	},
	{
		title: 'Factura Electrónica (GBSYS) — Migration Work',
		desc: 'Modernized legacy services into a consistent Spring Boot structure, improving maintainability and standardizing responses.',
		stack: ['Java', 'Spring Boot', 'Oracle'],
		github: '',
		live: '',
	},
];

const SKILLS = [
	'Java (8–21)',
	'Spring Boot',
	'REST APIs',
	'PostgreSQL',
	'Oracle',
	'AWS basics (Lambda/Cognito)',
	'Git/GitHub',
	'Testing (JUnit/MockMvc)',
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="page">
<section class="hero">
  <p class="kicker">Greivin Arce • Software Engineer</p>

  <h1>Backend Engineer focused on secure, scalable systems.</h1>

  <p class="subtitle">
    I design and deliver <strong>production-grade APIs</strong> using <strong>Java</strong> and <strong>Spring Boot</strong>,
    with an emphasis on <strong>security</strong>, <strong>reliability</strong>, and <strong>maintainable architecture</strong>.
    I’m comfortable working end-to-end: requirements → design → implementation → automated testing → deployment.
  </p>

  <div class="highlights">
    <div class="highlight">
      <p class="hl-title">Architecture & quality</p>
      <p class="hl-text">
        Clean architecture, consistent response contracts, validation standards, pagination/sorting patterns,
        and testable service boundaries.
      </p>
    </div>

    <div class="highlight">
      <p class="hl-title">Security mindset</p>
      <p class="hl-text">
        OAuth2/JWT flows, role/group-based access, safe input handling, and API hardening aligned with real-world usage.
      </p>
    </div>

    <div class="highlight">
      <p class="hl-title">Data & integrations</p>
      <p class="hl-text">
        Strong SQL + domain modeling, working with <strong>PostgreSQL</strong> and <strong>Oracle</strong>,
        and integrating with external services in regulated workflows.
      </p>
    </div>
  </div>

  <div class="cta">
    <a class="btn primary" href="#projects">View projects</a>
    <a class="btn" href={LINKS.email}>Contact</a>
  </div>

  <div class="meta">
    <a href={LINKS.github} target="_blank" rel="noopener">GitHub</a>
    <a href={LINKS.linkedin} target="_blank" rel="noopener">LinkedIn</a>
    <a href={LINKS.email}>Email</a>
  </div>
</section>


				<div class="cta">
					<a class="btn primary" href="#projects">View projects</a>
					<a class="btn" href={LINKS.email}>Contact</a>
				</div>

				<div class="meta">
					<a href={LINKS.github} target="_blank" rel="noopener">GitHub</a>
					<a href={LINKS.linkedin} target="_blank" rel="noopener">LinkedIn</a>
					<a href={LINKS.email}>Email</a>
				</div>
			</section>

			<section id="projects" class="section">
				<h2>Projects</h2>
				<div class="grid">
					{PROJECTS.map((p) => (
						<article class="card">
							<h3>{p.title}</h3>
							<p class="muted">{p.desc}</p>
							<ul class="tags">
								{p.stack.map((t) => <li>{t}</li>)}
							</ul>
							<div class="links">
								{p.github && <a href={p.github} target="_blank" rel="noopener">GitHub</a>}
								{p.live && <a href={p.live} target="_blank" rel="noopener">Live</a>}
							</div>
						</article>
					))}
				</div>
			</section>

			<section id="skills" class="section">
				<h2>Skills</h2>
				<ul class="pills">
					{SKILLS.map((s) => (
						<li class="pill">{s}</li>
					))}
				</ul>
			</section>

			<section id="experience" class="section">
				<h2>Experience</h2>
				<div class="card">
					<h3>GBSYS — Software Engineer</h3>
					<ul class="bullets">
						<li>Modernized legacy modules to a consistent Spring Boot architecture.</li>
						<li>Built secure endpoints with validation, structured responses, and automated tests.</li>
						<li>Worked with Oracle/PostgreSQL and electronic invoicing workflows.</li>
					</ul>
				</div>
			</section>

			<section id="contact" class="section">
				<h2>Contact</h2>
				<div class="card">
					<p class="muted">
						If you want to collaborate or discuss opportunities, feel free to reach out.
					</p>
					<div class="cta">
						<a class="btn primary" href={LINKS.email}>greivin.arce.n@gmail.com</a>
						<a class="btn" href={LINKS.github} target="_blank" rel="noopener">GitHub</a>
						<a class="btn" href={LINKS.linkedin} target="_blank" rel="noopener">LinkedIn</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page {
		max-width: 980px;
		margin: 0 auto;
		padding: 0 18px;
	}

	.hero {
		padding: 56px 0 22px;
	}

	.kicker {
		color: rgba(0, 0, 0, 0.6);
		margin: 0 0 10px;
	}

	h1 {
		font-size: 44px;
		line-height: 1.05;
		margin: 0 0 12px;
		letter-spacing: -0.03em;
	}

	.subtitle {
		max-width: 70ch;
		color: rgba(0, 0, 0, 0.75);
		font-size: 18px;
		line-height: 1.6;
		margin: 0 0 18px;
	}

	.section {
		padding: 42px 0;
	}

	h2 {
		font-size: 20px;
		margin: 0 0 14px;
		letter-spacing: -0.02em;
	}

	.cta {
		display: flex;
		gap: 10px;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 10px 14px;
		border-radius: 12px;
		border: 1px solid rgba(0, 0, 0, 0.12);
		text-decoration: none;
		font-weight: 600;
	}

	.btn.primary {
		background: #0b0b0c;
		color: #fff;
		border-color: #0b0b0c;
	}

	.meta {
		display: flex;
		gap: 14px;
		margin-top: 14px;
	}

	.meta a {
		text-decoration: none;
		color: rgba(0, 0, 0, 0.72);
	}

	.meta a:hover {
		text-decoration: underline;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 14px;
	}

	@media (max-width: 820px) {
		.grid {
			grid-template-columns: 1fr;
		}
		h1 {
			font-size: 36px;
		}
	}

	.card {
		border: 1px solid rgba(0, 0, 0, 0.1);
		border-radius: 16px;
		padding: 16px;
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.04);
	}

	.muted {
		color: rgba(0, 0, 0, 0.68);
	}

	.tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
		list-style: none;
		padding: 0;
		margin: 12px 0 0;
	}

	.tags li {
		font-size: 12px;
		padding: 6px 10px;
		border-radius: 999px;
		border: 1px solid rgba(0, 0, 0, 0.1);
		color: rgba(0, 0, 0, 0.75);
	}

	.links {
		display: flex;
		gap: 12px;
		margin-top: 12px;
	}

	.links a {
		text-decoration: none;
		font-weight: 600;
	}

	.links a:hover {
		text-decoration: underline;
	}

	.pills {
		display: flex;
		gap: 10px;
		flex-wrap: wrap;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.pill {
		font-size: 13px;
		padding: 8px 12px;
		border-radius: 999px;
		background: rgba(0, 0, 0, 0.04);
		border: 1px solid rgba(0, 0, 0, 0.06);
	}

	.bullets {
		margin: 10px 0 0;
		padding-left: 18px;
		color: rgba(0, 0, 0, 0.72);
		line-height: 1.6;
	}
  /* Solo estilos del hero (pequeños y consistentes) */
  .hero { padding: 56px 0 22px; }
  .kicker { color: rgba(0,0,0,.62); margin: 0 0 10px; }

  .subtitle { max-width: 78ch; }

  .highlights{
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 14px;
    margin: 18px 0 18px;
  }
  .highlight{
    border: 1px solid rgba(0,0,0,.10);
    border-radius: 16px;
    padding: 14px;
    background: #fff;
    box-shadow: 0 8px 30px rgba(0,0,0,.04);
  }
  .hl-title{
    margin: 0 0 6px;
    font-weight: 700;
    color: rgba(0,0,0,.92);
    font-size: 13px;
    letter-spacing: -0.01em;
  }
  .hl-text{
    margin: 0;
    color: rgba(0,0,0,.68);
    font-size: 14px;
    line-height: 1.55;
  }

  @media (max-width: 900px){
    .highlights{ grid-template-columns: 1fr; }
  }
</style>