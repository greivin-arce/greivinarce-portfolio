---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const LINKS = {
	github: 'https://github.com/greivin-arce',
	linkedin: 'https://www.linkedin.com/in/greivin-arce-navarro-77b62925a/',
	email: 'mailto:greivin.arce.n@gmail.com',
	emailPlain: 'greivin.arce.n@gmail.com',
};

const PROJECTS = [
  {
    title: 'Transaction Processing API',
    type: 'personal',
    desc: 'Secure REST API with pagination, sorting, and integration tests, designed with clean architecture and production reliability in mind.',
    focus: [
      'API design & consistency',
      'Pagination and sorting standards',
      'Integration testing',
      'Validation & error contracts',
    ],
    stack: ['Java', 'Spring Boot', 'PostgreSQL', 'JUnit'],
    github: 'https://github.com/greivin-arce/transaction-processing-api',
    live: '',
    privateNote: '',
  },

  {
    title: 'Electronic Invoicing Platform — Municipalidad de Heredia',
    type: 'client',
    desc: 'End-to-end electronic invoicing system built from scratch, fully compliant with Costa Rica’s Hacienda v4.4 requirements.',
    focus: [
      'Government-grade compliance',
      'REST API integrations',
      'Regulated financial workflows',
      'Angular + backend coordination',
    ],
    stack: ['Java', 'REST APIs', 'Angular', 'Hacienda FE v4.4'],
    github: '',
    live: '',
    privateNote: 'Private repository (client-owned).',
  },

  {
    title: 'Farm Management System — Universidad Nacional de Costa Rica',
    type: 'client',
    desc: 'Backend refactor and cloud migration of a legacy JavaFX system to Java 21 and REST APIs, preserving the existing UI.',
    focus: [
      'Large-scale refactor',
      'JavaFX → API-based architecture',
      'AWS Cognito authentication',
      'Cloud deployment',
    ],
    stack: ['Java 21', 'REST APIs', 'AWS Cognito', 'Cloud'],
    github: '',
    live: '',
    privateNote: 'Private repository (institution-owned).',
  },

  {
    title: 'Electronic Invoicing System — AyA (≈45,000 invoices/day)',
    type: 'client',
    desc: 'Migration and maintenance of a high-volume electronic invoicing platform processing approximately 45,000 invoices per day.',
    focus: [
      'High-throughput systems',
      'Oracle-based large datasets',
      'Regulatory migrations (v4.3 → v4.4)',
      'Production-critical stability',
    ],
    stack: ['Java EE', 'Oracle', 'PrimeFaces', 'Payara', 'Hacienda FE v4.4'],
    github: '',
    live: '',
    privateNote: 'Private repository (client-owned).',
  },
];

const SKILLS = [
	'Java (8–21)',
	'Spring Boot',
	'REST APIs',
	'PostgreSQL',
	'Oracle',
	'AWS basics (Lambda/Cognito)',
	'Git/GitHub',
	'Testing (JUnit/MockMvc)',
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main class="page">
			<section class="hero">
				<p class="kicker">Greivin Arce — Backend Software Engineer</p>

				<h1>Backend Engineer focused on secure, scalable systems.</h1>

				<p class="subtitle">
					I design and deliver <strong>production-grade APIs</strong> using <strong>Java</strong> and{' '}
					<strong>Spring Boot</strong>, with an emphasis on <strong>security</strong>,{' '}
					<strong>reliability</strong>, and <strong>maintainable architecture</strong>. I’m comfortable
					working end-to-end: requirements → design → implementation → automated testing → deployment.
				</p>

				<div class="highlights">
					<div class="highlight">
						<p class="hl-title">Architecture & quality</p>
						<p class="hl-text">
							Clean architecture, consistent response contracts, validation standards, pagination/sorting
							patterns, and testable service boundaries.
						</p>
					</div>

					<div class="highlight">
						<p class="hl-title">Security mindset</p>
						<p class="hl-text">
							OAuth2/JWT flows, role/group-based access, safe input handling, and API hardening aligned
							with real-world usage.
						</p>
					</div>

					<div class="highlight">
						<p class="hl-title">Data & integrations</p>
						<p class="hl-text">
							Strong SQL + domain modeling, working with <strong>PostgreSQL</strong> and{' '}
							<strong>Oracle</strong>, and integrating with external services in regulated workflows.
						</p>
					</div>
				</div>

				<div class="hero-links" aria-label="Profile links">
  <a href={LINKS.github} target="_blank" rel="noopener" aria-label="GitHub">
    <svg viewBox="0 0 16 16" aria-hidden="true">
      <path
        fill="currentColor"
        d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
      />
    </svg>
  </a>

  <a href={LINKS.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn">
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        fill="currentColor"
        d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.22 24h4.56V7.98H.22V24zM8.22 7.98H12.6v2.2h.06c.61-1.16 2.11-2.38 4.35-2.38 4.65 0 5.51 3.06 5.51 7.03V24h-4.56v-7.92c0-1.89-.03-4.33-2.64-4.33-2.64 0-3.05 2.06-3.05 4.19V24H8.22V7.98z"
      />
    </svg>
  </a>

  <a href={LINKS.email} aria-label="Email">
    <svg viewBox="0 0 24 24" aria-hidden="true">
      <path
        fill="currentColor"
        d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5L4 8V6l8 5 8-5v2z"
      />
    </svg>
  </a>
</div>
			</section>

			<section id="projects" class="section">
				<div class="section-head">
					<h2>Projects</h2>
					<p class="section-subtitle">
						Selected work that highlights API design, reliability, security, and real-world integrations.
					</p>
				</div>

				<div class="grid">
					{PROJECTS.map((p) => (
						<article class="card project">
							<p class="project-type">
								{p.type === 'personal' ? 'Personal project' : 'Client project'}
							</p>

							<div class="project-top">
								<h3>{p.title}</h3>
								<p class="muted">{p.desc}</p>
							</div>

							{p.focus?.length ? (
								<div class="focus">
									<p class="focus-label">Focus</p>
									<ul class="focus-list">
										{p.focus.map((f) => <li>{f}</li>)}
									</ul>
								</div>
							) : null}

							<ul class="tags" aria-label="Tech stack">
								{p.stack.map((t) => <li>{t}</li>)}
							</ul>

							<div class="links">
								{p.github && (
									<a href={p.github} target="_blank" rel="noopener">
										GitHub →
									</a>
								)}
								{p.live && (
									<a href={p.live} target="_blank" rel="noopener">
										Live →
									</a>
								)}
							</div>

							{!p.github && p.privateNote ? (
								<p class="private-note muted">{p.privateNote}</p>
							) : null}
						</article>
					))}
				</div>
			</section>

			<section id="experience" class="section">
				<div class="section-head">
					<h2>Experience</h2>
				</div>

				<div class="card">
					<div class="exp-head">
						<h3>GBSYS — Software Engineer</h3>
						<p class="exp-dates">2024–Present</p>
					</div>

					<ul class="bullets">
						<li>Modernized legacy modules to a consistent Spring Boot architecture.</li>
						<li>Built secure endpoints with validation, structured responses, and automated tests.</li>
						<li>Worked with Oracle/PostgreSQL and electronic invoicing workflows.</li>
					</ul>
				</div>
			</section>

			<section id="skills" class="section section-compact">
				<div class="section-head">
					<h2>Skills</h2>
					<p class="section-subtitle muted">
						Core tools I use regularly. Projects provide deeper context and real-world application.
					</p>
				</div>

				<ul class="pills">
					{SKILLS.map((s) => (
						<li class="pill">{s}</li>
					))}
				</ul>
			</section>

			<section id="contact" class="section">
				<div class="section-head">
					<h2>Contact</h2>
				</div>

				<div class="card">
					<p class="muted">
						If you want to collaborate or discuss opportunities, feel free to reach out.
					</p>

					<div class="cta">
  <!-- Primary: email -->
  <a class="btn primary email" href={LINKS.email} aria-label={`Email ${LINKS.emailPlain}`}>
    <span class="email-text">{LINKS.emailPlain}</span>
  </a>

  <!-- Copy to clipboard -->
  <button class="icon-btn" type="button" data-copy-email aria-label="Copy email" title="Copy email">
    <!-- Clipboard icon -->
    <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
      <path
        fill="currentColor"
        d="M16 4h-1.18A3 3 0 0 0 12 2a3 3 0 0 0-2.82 2H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm-4-1a1 1 0 0 1 1 1h-2a1 1 0 0 1 1-1Zm5 19H8a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1v2h6V5h1a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1Z"
      />
    </svg>
  </button>

  <!-- GitHub -->
  <a class="icon-btn" href={LINKS.github} target="_blank" rel="noopener" aria-label="GitHub" title="GitHub">
    <svg viewBox="0 0 16 16" width="18" height="18" aria-hidden="true">
      <path
        fill="currentColor"
        d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
      />
    </svg>
  </a>

  <!-- LinkedIn -->
  <a class="icon-btn" href={LINKS.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
    <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
      <path
        fill="currentColor"
        d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.22 24h4.56V7.98H.22V24zM8.22 7.98H12.6v2.2h.06c.61-1.16 2.11-2.38 4.35-2.38 4.65 0 5.51 3.06 5.51 7.03V24h-4.56v-7.92c0-1.89-.03-4.33-2.64-4.33-2.64 0-3.05 2.06-3.05 4.19V24H8.22V7.98z"
      />
    </svg>
  </a>
</div>

<p class="copy-hint muted" data-copy-status aria-live="polite"></p>

					<p class="copy-hint muted" data-copy-status aria-live="polite"></p>
				</div>
			</section>
		</main>

		<Footer />

		<script is:inline>
			(() => {
				const btn = document.querySelector('[data-copy-email]');
				const status = document.querySelector('[data-copy-status]');
				const email = 'greivin.arce.n@gmail.com';

				if (!btn || !status) return;

				btn.addEventListener('click', async () => {
					try {
						await navigator.clipboard.writeText(email);
						status.textContent = 'Copied to clipboard.';
						window.setTimeout(() => (status.textContent = ''), 1800);
					} catch (e) {
						status.textContent = 'Could not copy. You can select and copy the email manually.';
					}
				});
			})();
		</script>
	</body>
</html>

<style>
	.page {
		max-width: 980px;
		margin: 0 auto;
		padding: 0 18px;
	}

	.hero {
		padding: 40px 0 18px;
	}

	.kicker {
  font-size: 14px;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.72);
  letter-spacing: -0.01em;
}

	h1 {
		font-size: 44px;
		line-height: 1.05;
		margin: 0 0 12px;
		letter-spacing: -0.03em;
	}

	.subtitle {
		max-width: 78ch;
		color: rgba(0, 0, 0, 0.78);
		font-size: 18px;
		line-height: 1.65;
		margin: 0 0 14px;
	}

	.quick-links {
		display: flex;
		gap: 14px;
		margin-top: 10px;
	}

	.quick-links a {
		text-decoration: none;
		color: rgba(0, 0, 0, 0.72);
		font-weight: 600;
	}

	.quick-links a:hover {
		text-decoration: underline;
	}

	.highlights {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 14px;
		margin: 16px 0 10px;
	}

	.highlight {
		border: 1px solid rgba(0, 0, 0, 0.1);
		border-radius: 16px;
		padding: 14px;
		background: #fff;
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.04);
	}

	.hl-title {
		margin: 0 0 6px;
		font-weight: 700;
		color: rgba(0, 0, 0, 0.92);
		font-size: 13px;
		letter-spacing: -0.01em;
	}

	.hl-text {
		margin: 0;
		color: rgba(0, 0, 0, 0.68);
		font-size: 14px;
		line-height: 1.55;
	}

	.section {
		padding: 38px 0;
	}

	.section-compact {
		padding: 28px 0;
	}

	.section-head {
		display: flex;
		flex-direction: column;
		gap: 6px;
		margin-bottom: 14px;
	}

	h2 {
		font-size: 20px;
		margin: 0;
		letter-spacing: -0.02em;
	}

	.section-subtitle {
		margin: 0;
		color: rgba(0, 0, 0, 0.68);
		line-height: 1.5;
		max-width: 80ch;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 14px;
	}

	@media (max-width: 900px) {
		.highlights {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 820px) {
		.grid {
			grid-template-columns: 1fr;
		}
		h1 {
			font-size: 36px;
		}
	}

	.card {
		border: 1px solid rgba(0, 0, 0, 0.1);
		border-radius: 16px;
		padding: 16px;
		box-shadow: 0 8px 30px rgba(0, 0, 0, 0.04);
		background: #fff;
	}

	.project-type {
		font-size: 11px;
		font-weight: 800;
		letter-spacing: 0.04em;
		text-transform: uppercase;
		color: rgba(0, 0, 0, 0.55);
		margin: 0 0 6px;
	}

	.project h3 {
		margin: 0 0 8px;
	}

	.project-top .muted {
		margin: 0;
	}

	.focus {
		margin-top: 12px;
		padding-top: 12px;
		border-top: 1px solid rgba(0, 0, 0, 0.08);
	}

	.focus-label {
		margin: 0 0 8px;
		font-weight: 800;
		font-size: 12px;
		letter-spacing: -0.01em;
		color: rgba(0, 0, 0, 0.88);
	}

	.focus-list {
		margin: 0;
		padding-left: 18px;
		color: rgba(0, 0, 0, 0.72);
		line-height: 1.55;
	}

	.muted {
		color: rgba(0, 0, 0, 0.68);
	}

	.tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
		list-style: none;
		padding: 0;
		margin: 12px 0 0;
	}

	.tags li {
		font-size: 12px;
		padding: 6px 10px;
		border-radius: 999px;
		border: 1px solid rgba(0, 0, 0, 0.1);
		color: rgba(0, 0, 0, 0.75);
		background: rgba(0, 0, 0, 0.02);
	}

	.links {
		display: flex;
		gap: 12px;
		margin-top: 12px;
	}

	.links a {
		text-decoration: none;
		font-weight: 800;
		color: rgba(0, 0, 0, 0.9);
	}

	.links a:hover {
		text-decoration: underline;
	}

	.private-note {
		margin: 10px 0 0;
		font-size: 12px;
	}

	.cta {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 12px;
}

/* Email primary keeps prominence */
.btn.email {
  padding: 12px 16px;
  border-radius: 14px;
}

/* Icon buttons */
.icon-btn {
  width: 46px;
  height: 46px;
  border-radius: 14px;
  border: 1px solid rgba(0, 0, 0, 0.12);
  background: #fff;
  color: rgba(0, 0, 0, 0.82);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: transform 0.15s ease, background 0.15s ease, border-color 0.15s ease;
}

.icon-btn:hover {
  transform: translateY(-1px);
  background: rgba(0, 0, 0, 0.03);
  border-color: rgba(0, 0, 0, 0.18);
}

.icon-btn:focus-visible {
  outline: 2px solid rgba(0, 0, 0, 0.28);
  outline-offset: 2px;
}

.copy-hint {
  margin: 10px 0 0;
  min-height: 1em;
}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 10px 14px;
		border-radius: 12px;
		border: 1px solid rgba(0, 0, 0, 0.12);
		text-decoration: none;
		font-weight: 700;
		background: #fff;
		color: rgba(0, 0, 0, 0.9);
		cursor: pointer;
	}

	.btn:hover {
		border-color: rgba(0, 0, 0, 0.2);
	}

	.btn.primary {
		background: #0b0b0c;
		color: #fff;
		border-color: #0b0b0c;
	}

	.copy-hint {
		margin: 10px 0 0;
		min-height: 1em;
	}

	.exp-head {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: 14px;
	}

	.exp-head h3 {
		margin: 0;
	}

	.exp-dates {
		margin: 0;
		color: rgba(0, 0, 0, 0.62);
		font-weight: 700;
		font-size: 13px;
	}

	.bullets {
		margin: 10px 0 0;
		padding-left: 18px;
		color: rgba(0, 0, 0, 0.72);
		line-height: 1.6;
	}

	.pills {
		display: flex;
		gap: 10px;
		flex-wrap: wrap;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.pill {
		font-size: 13px;
		padding: 8px 12px;
		border-radius: 999px;
		background: rgba(0, 0, 0, 0.03);
		border: 1px solid rgba(0, 0, 0, 0.06);
	}
	.hero-links {
  display: flex;
  gap: 14px;
  margin-top: 14px;
}

.hero-links a {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  border-radius: 10px;
  color: rgba(0, 0, 0, 0.72);
  transition: transform 0.15s ease, background 0.15s ease, color 0.15s ease;
}

.hero-links a:hover {
  background: rgba(0, 0, 0, 0.05);
  transform: translateY(-1px);
  color: rgba(0, 0, 0, 0.9);
}

.hero-links a svg {
  width: 18px;
  height: 18px;
}
</style>