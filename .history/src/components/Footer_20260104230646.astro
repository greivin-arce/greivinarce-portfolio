<style>
  .footer {
    padding: 28px 0 60px;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    color: rgba(0, 0, 0, 0.62);
  }

  .inner {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 18px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 14px;
  }

  .copy {
    margin: 0;
    font-size: 13px;
    font-weight: 600;
  }

  .social {
    display: flex;
    align-items: center;
    gap: 14px;
  }

  .social a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.72);
    font-weight: 700;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .social a:hover {
    color: rgba(0, 0, 0, 0.92);
    text-decoration: underline;
  }

  @media (max-width: 720px) {
    .inner {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>