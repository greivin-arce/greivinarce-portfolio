---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

const LINKS = {
  github: 'https://github.com/greivin-arce',
  linkedin: 'https://www.linkedin.com/in/greivin-arce-navarro-77b62925a/',
  cv: '/Greivin_Arce_Software_Engineer.pdf',
};
---

<header class="site-header">
  <nav class="nav">
    <h2 class="brand">
      <a href="/">{SITE_TITLE}</a>
    </h2>

    <div class="nav-right">
      <div class="internal-links" aria-label="Primary navigation">
        <HeaderLink href="/">Home</HeaderLink>
        <a class="nav-link" href="#projects">Projects</a>
      </div>

      <a href="{LINKS.cv}" class="cv-btn" target="_blank" rel="noopener">
        Download CV
      </a>

      <a
        href="{LINKS.cv}"
        class="cv-icon"
        target="_blank"
        rel="noopener"
        aria-label="Download CV"
        title="Download CV"
      >
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path
            fill="currentColor"
            d="M12 3a1 1 0 0 1 1 1v9.59l2.3-2.3a1 1 0 1 1 1.4 1.42l-4.01 4a1 1 0 0 1-1.39 0l-4.01-4a1 1 0 1 1 1.4-1.42l2.3 2.3V4a1 1 0 0 1 1-1zM5 19a1 1 0 0 1 1-1h12a1 1 0 1 1 0 2H6a1 1 0 0 1-1-1z"
          />
        </svg>
      </a>

      <div class="social-links" aria-label="Social links">
        <a
          href="{LINKS.github}"
          target="_blank"
          rel="noopener"
          aria-label="GitHub"
          title="GitHub"
        >
          <svg viewBox="0 0 16 16" aria-hidden="true" width="22" height="22">
            <path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            />
          </svg>
        </a>

        <a
          href="{LINKS.linkedin}"
          target="_blank"
          rel="noopener"
          aria-label="LinkedIn"
          title="LinkedIn"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true" width="22" height="22">
            <path
              fill="currentColor"
              d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.22 24h4.56V7.98H.22V24zM8.22 7.98H12.6v2.2h.06c.61-1.16 2.11-2.38 4.35-2.38 4.65 0 5.51 3.06 5.51 7.03V24h-4.56v-7.92c0-1.89-.03-4.33-2.64-4.33-2.64 0-3.05 2.06-3.05 4.19V24H8.22V7.98z"
            />
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .site-header {
    margin: 0;
    background: white;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .nav {
    max-width: 980px;
    margin: 0 auto;
    padding: 10px 18px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .brand {
    margin: 0;
    font-size: 16px;
    font-weight: 800;
    letter-spacing: -0.01em;
  }

  .brand a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.92);
    padding: 8px 0;
    display: inline-flex;
    align-items: center;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  /* Internal links (tabs) */
  .internal-links {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .nav-link {
    padding: 10px 10px;
    border-radius: 12px;
    color: rgba(0, 0, 0, 0.86);
    text-decoration: none;
    font-weight: 700;
  }

  .nav-link:hover {
    background: rgba(0, 0, 0, 0.04);
  }

  /* IMPORTANT: do NOT apply the old nav a styles globally */
  /* Button */
  .cv-btn {
    padding: 10px 12px;
    border-radius: 14px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    background: #fff;
    color: rgba(0, 0, 0, 0.92);
    text-decoration: none;
    font-weight: 800;
    white-space: nowrap;
  }

  .cv-btn:hover {
    background: rgba(0, 0, 0, 0.03);
    border-color: rgba(0, 0, 0, 0.18);
    transform: translateY(-1px);
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .social-links a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    border-radius: 12px;
    color: rgba(0, 0, 0, 0.82);
    opacity: 0.85;
    transition: opacity 0.15s ease, transform 0.15s ease, background 0.15s ease;
  }

  .social-links a:hover {
    opacity: 1;
    transform: translateY(-1px);
    background: rgba(0, 0, 0, 0.04);
  }

  .social-links a:focus-visible,
  .cv-btn:focus-visible,
  .nav-link:focus-visible {
    outline: 2px solid rgba(0, 0, 0, 0.25);
    outline-offset: 2px;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
    .cv-btn {
      display: none;
    } /* opcional: esconder CV en m√≥vil para que no se apriete */
  }
</style>
