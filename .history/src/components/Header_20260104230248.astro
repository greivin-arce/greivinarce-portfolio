---
const nav = [
	{ label: 'Home', href: '/' },
	{ label: 'Projects', href: '/#projects' },
	{ label: 'About', href: '/about' },
	{ label: 'Contact', href: '/#contact' },
];

const github = 'https://github.com/greivin-arce';
---
<header class="site-header">
	<div class="inner">
		<a class="brand" href="/">Greivin Arce</a>

		<nav class="nav" aria-label="Primary navigation">
			{nav.map((item) => (
				<a class="nav-link" href={item.href}>{item.label}</a>
			))}
		</nav>

		<a class="icon" href={github} target="_blank" rel="noopener" aria-label="GitHub">
			<svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
				<path
					d="M12 .5C5.73.5.75 5.64.75 12.02c0 5.1 3.29 9.42 7.86 10.95.58.11.79-.26.79-.57v-2.1c-3.2.71-3.87-1.39-3.87-1.39-.52-1.36-1.27-1.72-1.27-1.72-1.04-.73.08-.72.08-.72 1.15.08 1.75 1.2 1.75 1.2 1.02 1.78 2.67 1.26 3.32.96.1-.76.4-1.26.72-1.55-2.55-.3-5.23-1.3-5.23-5.78 0-1.28.44-2.33 1.16-3.15-.12-.3-.5-1.52.11-3.17 0 0 .95-.31 3.11 1.2.9-.25 1.87-.38 2.83-.38.96 0 1.93.13 2.83.38 2.16-1.51 3.11-1.2 3.11-1.2.61 1.65.23 2.87.11 3.17.72.82 1.16 1.87 1.16 3.15 0 4.49-2.69 5.48-5.25 5.77.41.37.78 1.1.78 2.22v3.29c0 .32.21.69.8.57 4.56-1.53 7.85-5.85 7.85-10.95C23.25 5.64 18.27.5 12 .5z"
				/>
			</svg>
		</a>
	</div>
</header>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 50;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(0,0,0,0.06);
	}

	.inner {
		max-width: 980px;
		margin: 0 auto;
		padding: 14px 18px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 14px;
	}

	.brand {
		font-weight: 800;
		text-decoration: none;
		color: rgba(0,0,0,0.92);
		letter-spacing: -0.02em;
	}

	.nav {
		display: flex;
		gap: 18px;
		align-items: center;
	}

	.nav-link {
		text-decoration: none;
		color: rgba(0,0,0,0.72);
		font-weight: 700;
	}

	.nav-link:hover {
		color: rgba(0,0,0,0.92);
	}

	.icon {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		color: rgba(0,0,0,0.82);
	}

	.icon:hover {
		color: rgba(0,0,0,1);
	}

	@media (max-width: 700px) {
		.nav {
			gap: 12px;
		}
	}
</style>