      <!-- LinkedIn -->
      <a
        href={LINKS.linkedin}
        target="_blank"
        rel="noopener"
        aria-label="LinkedIn"
      >
        <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
          <path
